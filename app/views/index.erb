# Index
# Making use of partials, the main HTML content is held in shared/finstagram_post.erb and layout.erb
# Remaining code is being used to refer to finstagram_post.erb in shared to render content
<% if current_user %>
    <div class="new-finstagram-post>
        <a href="/finstagram_posts/new" class="button">New Post</a>
    </div>
<% end %>

<% @finstagram_posts.each do |finstagram_post| %>
    <%= erb(:'shared/finstagram_post', { locals: { finstagram_post: finstagram_post }}) %>
<% end %>