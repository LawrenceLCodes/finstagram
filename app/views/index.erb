
    <header>
        <h1>Finstagram</h1>
    </header>
    <main role="main">
      <% @finstagram_posts.each do |finstagram_post| %>
        <!-- Each Finstagram post should include the following -->
        <!-- Primary tag that will contain all necessary content of each post -->
        <!-- 1st finstagram example post -->
        <article class="finstagram-post">
            <!-- Post image, usename and time when posted -->
            <div class="user-info">
                <img src="<%= finstagram_post[:avatar_url] %>" alt="<%= finstagram_post[:username] %>">
                <h2><%= finstagram_post[:username] %></h2>
                <h3><%= finstagram_post[:humanized_time_elapsed] %></h3>
            </div>
            <!-- Clickable Image -->
            <a class="photo" href="#">
                <img src="<%= finstagram_post[:photo_url] %>" alt="finstagram post from <%= finstagram_post[:username] %>">
            </a>
            <!-- likes & comments counters-->
            <div class="actions">
                <%= finstagram_post[:like_count] %> likes
                <span class="comment-count"><%= finstagram_post[:comment_count] %> comment</span>
            </div>
            <!-- comment text or paragraphs -->
            <ul class="comments">
              <% finstagram_post[:comments].each do |comment| %>
                <li>
                    <p>
                        <%= comment[:username] %>: <%= comment[:text] %>
                    </p>
                </li>
              <% end %>
            </ul>
        </article>
        <% end %>       
    </main>